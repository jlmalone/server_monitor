{
  "version": "1.0.0",
  "checkInterval": 5,
  "alertOnDowntime": true,
  "autoRestart": true,
  "maxRestarts": 3,
  "restartBackoff": "exponential",
  "services": [
    {
      "name": "Clawdbot Gateway",
      "type": "launchd",
      "identifier": "com.clawdbot.gateway",
      "checkCommand": "launchctl list | grep -q com.clawdbot.gateway && echo 'running' || echo 'stopped'",
      "restartCommand": "launchctl stop com.clawdbot.gateway && sleep 2 && launchctl start com.clawdbot.gateway",
      "logPath": "~/.clawdbot/logs/gateway.log",
      "errorLogPath": "~/.clawdbot/logs/gateway.err.log",
      "critical": true,
      "description": "Moltbot main gateway service"
    },
    {
      "name": "Redo HTTPS Server",
      "type": "process",
      "processName": "https-server.js",
      "checkCommand": "pgrep -f 'node.*https-server.js' > /dev/null && echo 'running' || echo 'stopped'",
      "restartCommand": "cd ~/WebstormProjects/redo-web-app && nohup node https-server.js >> logs/https.log 2>&1 &",
      "logPath": "~/WebstormProjects/redo-web-app/logs/https.log",
      "critical": true,
      "description": "Redo web application HTTPS server"
    },
    {
      "name": "Redo Log Server",
      "type": "process",
      "processName": "log-server.j",
      "checkCommand": "pgrep -f 'node.*log-server.j' > /dev/null && echo 'running' || echo 'stopped'",
      "restartCommand": "cd ~/WebstormProjects/redo-web-app && nohup node log-server.j >> logs/log-server.log 2>&1 &",
      "logPath": "~/WebstormProjects/redo-web-app/logs/log-server.log",
      "critical": false,
      "description": "Redo logging service"
    },
    {
      "name": "Redo Debug Server",
      "type": "process",
      "processName": "debug-server",
      "checkCommand": "pgrep -f 'node.*debug-server' > /dev/null && echo 'running' || echo 'stopped'",
      "restartCommand": "cd ~/WebstormProjects/redo-web-app && nohup node debug-server >> logs/debug-server.log 2>&1 &",
      "logPath": "~/WebstormProjects/redo-web-app/logs/debug-server.log",
      "critical": false,
      "description": "Redo debugging service"
    }
  ],
  "notifications": {
    "sound": true,
    "persistent": true,
    "quietHours": {
      "enabled": false,
      "start": "23:00",
      "end": "08:00"
    }
  },
  "ui": {
    "showUptime": true,
    "showResourceUsage": true,
    "darkMode": "auto"
  }
}
